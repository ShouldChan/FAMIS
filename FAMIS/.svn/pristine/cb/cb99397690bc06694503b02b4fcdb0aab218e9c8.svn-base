    <title>ZC_View</title>
    <script type="text/javascript">
    $(function () {
        LoadInitData_Detail();
        $(".SC_Date_Accounting").show();
        $(".SC_Content_Accounting").hide();
        $("#Accounting_SC").combobox({
            onChange: function (n, o) {
                //n 表示new  value
                //o 表示 old value
                if (n == "GZRQ" || n == "DJRQ") {
                    $(".SC_Date_Accounting").show();
                    $(".SC_Content_Accounting").hide();
                } else {
                    $(".SC_Date_Accounting").hide();
                    $(".SC_Content_Accounting").show();
                }


            }

        });



    });
    </script>

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>数据字典</title>
    <link rel="stylesheet" type="text/css" href="../../LIB/jquery-easyui-1.3.2/themes/default/easyui.css" />
    <link rel="stylesheet" type="text/css" href="../../LIB/jquery-easyui-1.3.2/themes/icon.css" />
    <link rel="stylesheet" type="text/css" href="../../LIB/jquery-easyui-1.3.2/demo/demo.css" />

    <script type="text/javascript" src="../../LIB/jquery-easyui-1.3.2/jquery-1.8.0.min.js"></script>
    <script type="text/javascript" src="../../LIB/jquery-easyui-1.3.2/jquery.easyui.min.js"></script>
    <script type="text/javascript" src="../../Scripts/UI/easyui-lang-zh_CN.js"></script>

    <script type="text/javascript" src="../../Scripts/Views/Dict/dataDict.js"></script>



</head>
<body>
    <div class="easyui-layout" fit="true">
        <div id="p" data-options="region:'west'" title="数据字典" style="width: 300px; padding: 10px">
            <div style="border: 1px;">
                <a href="javascript:void(0)" class="easyui-linkbutton" data-options="plain:true,iconCls:'icon-reload'" onclick="reloadTree('tree_Dict')">刷新</a>
                <a href="javascript:void(0)" class="easyui-linkbutton" data-options="plain:true,iconCls:'icon-add'" onclick="expandALL('tree_Dict')">展开</a>
                <a href="javascript:void(0)" class="easyui-linkbutton" data-options="plain:true,iconCls:'icon-remove'" onclick="closeALL('tree_Dict')">收起</a>
            </div>
            <ul id="tree_Dict" class="easyui-tree" data-options="border:false,singleSelect:true,fit:true,fitColumns:true,lines:true"></ul>
        </div>
        <div data-options="region:'center'" title="当前字典" fit="true">
            <div id="DIV_dataGrid_current" style="height:100%" >
                <input id="dataGrid_current" class="easyui-datagrid"   fit="true">
            </div>
            <div id="DIV_DictList_current" style="height:100%">
            <input id="DictList_current" class="easyui-treegrid"  fit="true">
            </div>
        </div>

        <div class="container">
            <div id="access_menu" class="easyui-menu" style="width: 100px;">
                <div id="access_menu_edit" onclick="addBroNode()">新增同级</div>
                <div id="access_menu_del" onclick="addchild()">新增下级</div>
                <div id="access_menu_refresh" onclick="editNode()">修改</div>
                <div id="access_menu_new" onclick="deletNode()">删除</div>
            </div>
            <div id="modalwindow" class="easyui-window" data-options="modal:true,closed:true,minimizable:false,shadow:false"></div>
            <button id="pp"></button>
        </div>
    </div>
</body>
</html>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>编辑资产类型</title>
    <link rel="stylesheet" type="text/css" href="../../LIB/jquery-easyui-1.3.2/themes/default/easyui.css" />
    <link rel="stylesheet" type="text/css" href="../../LIB/jquery-easyui-1.3.2/themes/icon.css" />
    <link rel="stylesheet" type="text/css" href="../../LIB/jquery-easyui-1.3.2/demo/demo.css" />

    <script type="text/javascript" src="../../LIB/jquery-easyui-1.3.2/jquery-1.8.0.min.js"></script>
    <script type="text/javascript" src="../../LIB/jquery-easyui-1.3.2/jquery.easyui.min.js"></script>
    <script type="text/javascript" src="../../Scripts/UI/easyui-lang-zh_CN.js"></script>


</head>
<body>
    @ViewBag.info
    <div fit="true">
        <table>
            <tr>
                <td style="width:100px"><label>类别编号<span Style="color:red">*</span>:</label></td>
                <td style="width:250px"><input class="easyui-textbox" style="width:100%;height:20px"></td>
            </tr>
             <tr>
                <td> <label>上级类别:</label></td>
                <td><input class="easyui-textbox" style="width:100%;height:20px" readonly="readonly" ></td>
            </tr>
             <tr>
                <td> <label>类别名称<span Style="color:red">*</span>:</label></td>
                <td><input class="easyui-textbox" style="width:100%;height:20px" value="@ViewBag.name"></td>
            </tr>
             <tr>
                <td> <label>计量单位:</label></td>
                <td style="width:250px"><input class="easyui-combobox" style="width:250px;height:20px"></td>
            </tr>
             <tr>
                <td> <label> 折旧方式:</label></td>
                 <td style="width:250px"><input class="easyui-combobox" style="width:250px;height:20px"></td>
            </tr>
             <tr>
                <td> <label>折旧年限(月) :</label></td>
                <td><input class="easyui-textbox" style="width:100%;height:20px"></td>
            </tr>
             <tr>
                <td> <label>净残值率(%):</label></td>
                <td><input class="easyui-textbox" style="width:100%;height:20px"></td>
            </tr>
        </table>
    </div>

  
</body>
</html>
